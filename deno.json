{
  "tasks": {
    "build:npm": "deno run -A tasks/build-npm.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["prefer-const", "require-yield"]
    },
    "exclude": [
      "build",
      "website",
      "www",
      "packages"
    ]
  },
  "fmt": {
    "exclude": [
      "build",
      "website",
      "www",
      "packages",
      "CODE_OF_CONDUCT.md",
      "README.md"
    ]
  },
  "test": {
    "exclude": [
      "build",
      "packages"
    ]
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  }
}
